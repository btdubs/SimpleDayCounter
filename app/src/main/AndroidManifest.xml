<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <application
      android:name=".SimpleDayCounterApplication"
      android:allowBackup="true"
      android:enableOnBackInvokedCallback="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.SimpleDayCounter"
      tools:targetApi="33">
    <activity
        android:name=".DayCounterWidgetConfigureActivity"
        android:exported="false"
        android:windowSoftInputMode="adjustPan">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
      </intent-filter>
    </activity>

    <activity
        android:name=".InfoActivity"
        android:excludeFromRecents="true"
        android:exported="true"
        android:theme="@android:style/Theme.NoDisplay">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.INFO" />
      </intent-filter>
    </activity>

    <receiver
        android:name=".WidgetPinnedReceiver"
        android:exported="false" />

    <receiver
        android:name=".SimpleDayCounterAppWidgetProvider"
        android:exported="false">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.TIME_SET" />
        <action android:name="android.intent.action.TIMEZONE_CHANGED" />
      </intent-filter>

      <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/app_widget_provider" />
    </receiver>
  </application>
</manifest>
